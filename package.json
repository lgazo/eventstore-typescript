{
  "name": "@ricofritzsche/eventstore",
  "version": "1.1.0",
  "description": "A TypeScript event sourcing library with Postgres persistence, real-time subscriptions, and projection support for building responsive event-sourced applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:postgres && npm run build:d1",
    "build:core": "tsc",
    "build:postgres": "npm run build -w ./packages/postgres",
    "build:d1": "npm run build -w ./packages/d1",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist packages/postgres/dist packages/d1/dist",
    "dev": "ts-node src/index.ts",
    "example": "ts-node -r tsconfig-paths/register src/examples/banking/cli.ts",
    "simple": "ts-node -r tsconfig-paths/register simple.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepack": "npm run build"
  },
  "keywords": [
    "eventstore",
    "event-sourcing",
    "eventsourcing",
    "typescript",
    "events",
    "postgresql",
    "postgres",
    "real-time",
    "subscriptions",
    "projections",
    "event-driven",
    "cqrs"
  ],
  "author": "Rico Fritzsche",
  "contributors": [
    "Ralf Westphal"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^17.0.1",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "overrides": {
    "glob": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricofritzsche/eventstore-typescript"
  },
  "bugs": {
    "url": "https://github.com/ricofritzsche/eventstore-typescript/issues"
  },
  "homepage": "https://github.com/ricofritzsche/eventstore-typescript#readme"
}
